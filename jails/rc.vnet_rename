#!/bin/sh
ifconfig_cmd="/sbin/ifconfig"
grep_cmd="/usr/bin/grep"

name="${1}"

if [ -z $name ]
then
	echo "No jailname specified."
	exit 1
fi

for ifn in `echo "0 1 2 3"`
do
	iface="ng${ifn}_${name}"
	new_iface="${name}${ifn}"

	(${ifconfig_cmd} | ${grep_cmd} ${iface} > /dev/null)
	if [ $? -eq 0 ]
	then
		echo "Network Interface: ${iface} -> ${new_iface}"
		(${ifconfig_cmd} ${iface} name ${new_iface} > /dev/null)
	fi
done

exit 0
